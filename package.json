{
  "name": "dapp",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": "Ted Meftah <https://tedmeftah.com>",
  "workspaces": [
    "contracts",
    "frontend"
  ],
  "devDependencies": {
    "turbo": "^1.0.19"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "outputs": ["artifacts/**", "cache/**", "build/**"],
        "dependsOn": ["^build"]
      },
      "test": {
        "dependsOn": ["build"]
      },
      "deploy": {
        "dependsOn": ["build", "test", "lint"]
      },
      "lint": {},
      "format": {},
      "dev": {
        "cache": false
      }
    }
  }
}
